@model Gomi.Infraestrutura.Models.Financeiro.Dashboard.ResultadoLiquido
<h6  style="color:purple;font-size:12px; position:absolute; "> <b>Resultado Liquido</b></h6> <br />

<div style="width:120px;height:20px;" ></div>

@(Html.DevExtreme().PieChart()
    
    .Size(s => s.Height(170).Width(150))
    .Type(PieChartType.Doughnut)
    .Palette(new[] { "#bebebe", "#ffc90c" })
    .InnerRadius(1)
    .Legend(l => l.Visible(false))
    .Tooltip(t => t
        .Enabled(true)
        )
    .CommonSeriesSettings( c=> c.ArgumentField("Descricao") )
    .Series(s => s
        .Add()
        .ValueField("Valor") 
        )
      
        
        
    .DataSource(Model.Resultados)
    )

<h3 style="color:black;font-size:10px; position:absolute; left:40px; top:200px; font-family:sans-serif"> <b>@(Model.Saldo)</b></h3>

<div  style="color:black ;font-family:fantasy; font-size:25px; position:absolute; left:50px; top:110px;"> 
     @(Model.Percentual)%
</div>
