

@model IEnumerable<Gomi.Infraestrutura.Models.Financeiro.Dashboard.PontoEquilibrioFinanceiro>

<h6 class="text-justify" style="color:purple;font-size:12px;"> <b>Ponto de Equilíbrio Financeiro</b></h6>

   @(Html.DevExtreme().Chart()
       .CommonAxisSettings(c => c.Grid(g => g.Visible(false)).Label(l => l.DisplayMode(ChartLabelDisplayMode.Standard).Font(f => f.Size(8))))
            .ArgumentAxis(a => a.Visible(true).TickInterval(t => t.Months(1)).AxisDivisionFactor(10).Tick(t => t.Visible(false)).Label(l => l.Format("MMM")).Position(Position.Bottom).Type(AxisScaleType.Discrete))

  .Size(s => s.Height(110))
  .CommonSeriesSettings(s => s
            .ArgumentField("Mes")
            .Type(SeriesType.Bar)

            )
    .Series(s =>
    {
        s.Add().ValueField("Receitaoperacional").Name("Receita Operacional").Color("#00ff00").Type(SeriesType.Bar);
        s.Add().ValueField("PontoEquilibrio").Name("Ponto Equilibrio").Color("#0040ff").Type(SeriesType.Bar);

    })

    .Legend(l => l
        .VerticalAlignment(VerticalEdge.Top)
        .HorizontalAlignment(HorizontalAlignment.Center))

    .Tooltip(t=> t.Enabled(true).Shared(true))

    .Size(s => s.Height(120).Width(500))
    .DataSource(Model)
)
