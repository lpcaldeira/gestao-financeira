@model IEnumerable<Gomi.Infraestrutura.Models.Financeiro.Dashboard.PrazoMedioRecebimento>

<h6  style="color:purple; font-size:12px;"> <b>Prazo Médio de Recebimento (PMR)</b></h6>

@(Html.DevExtreme().Chart()
   .Size(s => s.Height(110).Width(300))
  .CommonAxisSettings(c => c.Grid(g => g.Visible(false)).Label(l => l.DisplayMode(ChartLabelDisplayMode.Standard).Font(f => f.Size(8))))
      .ArgumentAxis(a => a.Visible(true).TickInterval(t => t.Months(1)).AxisDivisionFactor(10).Tick(t => t.Visible(false)).Label(l => l.Format("MMM")).Position(Position.Bottom).Type(AxisScaleType.Discrete))
  .CommonSeriesSettings(s => s.Label(l => l.Visible(false)))
  .ValueAxis(v => v.Add().Label(l => l.Visible(false)))
    .Series(s => s
        .Add()
        .ArgumentField("Mes")
        .ValueField("Pmr")
        .Type(SeriesType.Bar)
        .Color("#17bebb")
    )
    .BarWidth(0.9)
    .Legend(l => l .Visible(false)
    )
   
        .Tooltip(t => t
        .Enabled(true))
    .DataSource(Model)
)
