

@model IEnumerable<Gomi.Infraestrutura.Models.Financeiro.Dashboard.ReceitaOperacional>
<h6 class="text-justify" style="color:purple;font-size:12px;"> <b>Receita Operacional</b></h6>


@(Html.DevExtreme().Chart()
    .Size(s => s.Height(110))
    .CommonAxisSettings(c => c.Grid(g => g.Visible(false)).Label(l => l.DisplayMode(ChartLabelDisplayMode.Standard).Font(f => f.Size(8))))
        .ArgumentAxis(a => a.Visible(true).TickInterval(t => t.Months(1)).AxisDivisionFactor(10).Tick(t => t.Visible(false)).Label(l => l.Format("MMM")).Position(Position.Bottom).Type(AxisScaleType.Discrete))

    .CommonSeriesSettings(s => s
        .ArgumentField("Mes")
        .Type(SeriesType.Bar)
        .Label(l => l.Visible(false))
        )

    .Series(s =>
    {
        s.Add().ValueField("Valor").Color("#00BFFF").Label(L => L.Visible(false));
    })
     .Tooltip(t => t
        .Enabled(true))
    .Legend(l => l
        .Visible(false)
    )
    .Size(s => s.Height(120).Width(520))
    .DataSource(Model)
)

<button type="button" style="position:absolute; top:5px; left:500px; color:white; " class="btn btn-danger " data-toggle="modal" data-target="#add-grid-receitas-operacionais">+</button>

<div id="add-grid-receitas-operacionais"  class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg ">
        <div class="modal-content modal-lg">
            <div class="modal-header  modal-lg">
                <h4 class="modal-title">Receita Operacional</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body  modal-lg">
                <div>
                    <vc:dashboard-resultados-receita-operacional-grid max-priority="3" is-done="false">
                    </vc:dashboard-resultados-receita-operacional-grid>
                </div>
            </div>
            <div class="modal-footer modal-lg">
            </div>
        </div>
    </div>
</div>   