                    columns.AddFor(m => m.Emaberto).Caption("EM ABERTO").Width(80).Format("0#.##00");
                    columns.AddFor(m => m.Vencido).Caption("VENCIDO").Width(80).Format("0#.##00");
                    columns.AddFor(m => m.Cpf).Visible(false);
