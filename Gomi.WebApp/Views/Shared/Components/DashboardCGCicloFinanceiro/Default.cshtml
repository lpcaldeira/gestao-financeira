@model IEnumerable<Gomi.Infraestrutura.Models.Financeiro.Dashboard.CicloFinanceiro>

<h6  style="color:purple; font-size:12px;"> <b>Ciclo Financeiro</b></h6>

@(Html.DevExtreme().Chart()
    .CommonAxisSettings(c => c.Grid(g => g.Visible(false)).Label(l => l.DisplayMode(ChartLabelDisplayMode.Standard).Font(f => f.Size(8))))
        .ArgumentAxis(a => a.Visible(true).TickInterval(t => t.Months(1)).AxisDivisionFactor(10).Tick(t => t.Visible(false)).Label(l => l.Format("MMM")).Position(Position.Bottom).Type(AxisScaleType.Discrete))
    .ValueAxis(v => v.Add().Label(l => l.Visible(false)).TickInterval(t => t.Months(1)))
    .Size(s => s.Height(110).Width(300))
    .CommonSeriesSettings(s => s
        .ArgumentField("Mes")
        .Type(SeriesType.Bar)
        .Visible(true)
        
        )

    .Series(s =>
    {
        s.Add().ValueField("Ciclo").Name("Ciclo").Type(SeriesType.Bar);

    })
    .BarWidth(0.9)
    .Tooltip(t => t
        .Enabled(true))
    .Legend(l => l .Visible(false)
    )
    .DataSource(Model)
)
